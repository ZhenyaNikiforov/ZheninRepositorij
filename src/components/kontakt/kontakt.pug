include ../button/button.pug
-
  let leftButtonArgs= Object.assign({}, arguments);
  leftButtonArgs.color= 'white';
  leftButtonArgs.textContent= 'FOLLOW ON SPOTIFY';

  let rightButtonArgs= Object.assign({}, arguments);
  rightButtonArgs.color= 'white';
  rightButtonArgs.textContent= 'BUY FROM ITUNES'
  
section.razdelKontaktyi
  .kontaktyi_1
    h2.zagolov_kontaktyi_1
      | SPOTIFY
    p.abzacs_kontaktyi_1
      | Follow me, stream and add my songs to your Spotify playlist.
    div(class= 'contacts__left-button-wrapper')
      +button(leftButtonArgs)
  .kontaktyi_2
    h2.zagolov_kontaktyi_2
      | ITUNES
    p.abzacs_kontaktyi_2
      | Buy and download my songs from iTunes.
    div(class= 'contacts__right-button-wrapper')
      +button(rightButtonArgs)